{
  "manifest_version": 2,
  "name": "Tempus",
  "version": "1.1",

  "description": "Calculates the time elapsed between two dates",
  "icons": {
    "64": "icons/calendar_64.png"
  },
  "permissions": ["storage"],
  
  "browser_action": {
    "default_icon": "icons/calendar_32.png",
    "default_title": "Tempus",
    "default_popup": "popup/Tempus.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://www.clementboilevin.me/webext/updates.json"
    }
  }
}